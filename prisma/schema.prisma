generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  name        String
  email       String?  @unique
  password    String
  role        String   // "SUPERADMIN", "HOD", "FACULTY", "STUDENT"
  status      String   @default("Approved") // "Pending", "Approved", "Rejected"
  usn         String?  @unique
  semester    String?
  collegeName String?
  department  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
