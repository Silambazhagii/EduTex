generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String     @id @default(cuid())
  name        String
  email       String?    @unique
  password    String
  role        String     // "SUPERADMIN", "HOD", "FACULTY", "STUDENT"
  status      String     @default("Approved") // "Pending", "Approved", "Rejected"
  usn         String?    @unique
  semester    String?
  collegeName String?
  department  String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  documents   Document[]
}

model Document {
  id          String   @id @default(cuid())
  title       String
  fileUrl     String
  format      String   // PDF, PPTX, DOCX, JPG
  semester    String
  subject     String
  unit        String
  collegeName String?  // Optional to gracefully handle old data, required moving forward
  department  String?  // Optional to gracefully handle old data, required moving forward
  status      String   @default("Pending") // "Pending", "Approved", "Rejected"
  uploaderId  String
  uploader    User     @relation(fields: [uploaderId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
